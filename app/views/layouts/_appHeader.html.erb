      jQuery("#rock").prop('checked', false);
      jQuery("#rbSoul").prop('checked', false);
      jQuery("#singerSongwriter").prop('checked', false);
      jQuery("#world").prop('checked', false);
      buildWall();
    });
    jQuery("#altIndie").click(function() {
