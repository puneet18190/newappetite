  <script>
    function buildWall(){
      $queryString = null;
      var $queryString = "?new=1";
      if(jQuery("#altIndie").prop('checked')){
        $queryString = $queryString.concat("&altIndie=1");
      }
      if(jQuery("#country").prop('checked')){
        $queryString = $queryString.concat("&country=1");
      }
      if(jQuery("#electronicDance").prop('checked')){
        $queryString = $queryString.concat("&electronicDance=1");
      }
      if(jQuery("#folk").prop('checked')){
        $queryString = $queryString.concat("&folk=1");
      }
      if(jQuery("#hipHopRap").prop('checked')){
        $queryString = $queryString.concat("&hipHopRap=1");
      }
      if(jQuery("#pop").prop('checked')){
        $queryString = $queryString.concat("&pop=1");
      }
      if(jQuery("#rock").prop('checked')){
        $queryString = $queryString.concat("&rock=1");
      }
      if(jQuery("#rbSoul").prop('checked')){
        $queryString = $queryString.concat("&rbSoul=1");
      }
      if(jQuery("#singerSongwriter").prop('checked')){
        $queryString = $queryString.concat("&singerSongwriter=1");
      }
      if(jQuery("#world").prop('checked')){
        $queryString = $queryString.concat("&world=1");
      }
      if(jQuery("#altIndie").prop('checked')!=true && jQuery("#country").prop('checked')!=true && jQuery("#electronicDance").prop('checked')!=true && jQuery("#folk").prop('checked')!=true && jQuery("#hipHopRap").prop('checked')!=true && jQuery("#pop").prop('checked')!=true && jQuery("#rock").prop('checked')!=true && jQuery("#rbSoul").prop('checked')!=true && jQuery("#singerSongwriter").prop('checked')!=true && jQuery("#world").prop('checked')!=true){
        jQuery("#all").prop('checked', true);
      }
      console.log($queryString);
      jQuery.get('musicBlocks.php'+$queryString, function( data ) {

        var elements = jQuery("#chart").masonry('getItemElements');
        jQuery("#chart").masonry( 'remove', elements );
        jQuery('#chart').masonry();

        // Make jQuery object from HTML string
        var $moreBlocks = jQuery( data ).filter('div.box');
        // Append new blocks
        jQuery('#chart').append( $moreBlocks );

        // Have Masonry position new blocks
        jQuery('#chart').masonry( 'appended', $moreBlocks );
        jQuery('#chart').masonry();
      });

    }
    $(document).ready(function() {
      buildWall();
    });
    jQuery("#all").click(function() {
      jQuery("#altIndie").prop('checked', false);
      jQuery("#country").prop('checked', false);
      jQuery("#electronicDance").prop('checked', false);
      jQuery("#folk").prop('checked', false);
