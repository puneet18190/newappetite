						  <% if devise_mapping.rememberable? -%>
						    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
						  <% end -%>

						  <div><%= f.submit "Login" %></div>
						<% end %>
						-->
						</div>
					</div>
				</div>





                         
<%= render "layouts/footer" %>