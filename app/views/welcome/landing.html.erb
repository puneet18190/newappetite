<%= render "layouts/header" %>
                    <div id="step1">
                    	<div align="center" style="height:450px;">
                        <p>We are a points-based music promotion and discovery collective where you can
 build credibility while promoting music you think deserves to be heard. </p>
     					<div class="btns">
                        	<a class="learn_more" href="#learnMore"><span>Learn More &nbsp;&nbsp;<i class="fa fa-caret-down"></i></span></a>
                            <a class="get_acc" id="registerBtn">Get Early Access</a>


                     	</div>
                     </div>
                    </div>
                    <div id="step2">

						<div align="center" style="height:450px;">
							<div class="content" id="earlyAccesText">
							<h1>Early Access Registration</h1><br>
							</div>
							<div class="content" id="registerForm">

								<h3 style="height:40px;">Choose one of the following for an invite</h3>
								<div id="connections">
									<%= render :partial => "devise/shared/connections" %>
								</div>
							</div>
						</div>
					</div>
					<div id="step3">
						<div align="center" style="height:450px;">
							<div class="content">
						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						  <%= devise_error_messages! %>

						  <div><br />
						  <%= f.email_field :email, :autofocus => true, :placeholder => "email", :class => "inputBox" %></div><br>

						  <div>
						  <%= f.password_field :password, :placeholder => "password", :class => "inputBox"  %></div><br>

						  <div>
						  <%= f.password_field :password_confirmation, :placeholder => "confirm password", :class => "inputBox"  %></div>

						  <div class="btns" style="width:300px;"><br><%= f.submit "Sign Up", :class =>"learn_more", :style => "color: #FFF;font-size: 28px;font-family: 'Montserrat', sans-serif;font-weight: 400;background: url(../images/learn-more-bg.png) no-repeat 225px 14px; display: block; height:75px;" %></div>
						<% end %> 
